{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": ["node", "webdriverio/async", "cypress", "cypress-xpath"]
    },
    "include": [
      "./**/*.ts",
        "node_modules/@shelex/cypress-allure-plugin/reporter",
      "node_modules/@types/jasmine/index.d.ts",
      "node_modules/cypress/types/cypress-global-vars.d.ts"
    ]
}
